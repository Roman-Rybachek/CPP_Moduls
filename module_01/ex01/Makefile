CC =		clang++
NAME =		ex01
FLAGS =		-Wall -Wextra -Werror -o $(NAME)
SRCS =		ex01.cpp

all: $(NAME)

$(NAME): $(SRCS)
	$(CC) $(FLAGS) $(SRCS)
	valgrind ./ex01

clean:
	rm -f $(NAME)